<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      Clothing Shop
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" 
            aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Ropa Mujer", products_path(category: :ropa_mujer), 
              class: "nav-link #{'active bg-light text-dark' if params[:category] == 'ropa_mujer'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ropa Interior Mujer", products_path(category: :ropa_interior_mujer), 
              class: "nav-link #{'active bg-light text-dark' if params[:category] == 'ropa_interior_mujer'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ropa Interior Hombre", products_path(category: :ropa_interior_hombre), 
              class: "nav-link #{'active bg-light text-dark' if params[:category] == 'ropa_interior_hombre'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Ropa Hombre", products_path(category: :ropa_hombre), 
              class: "nav-link #{'active bg-light text-dark' if params[:category] == 'ropa_hombre'}" %>
        </li>
      </ul>

      <ul class="navbar-nav align-items-center">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to admin_dashboard_path, class: "nav-link" do %>
                <i class="bi bi-speedometer2 me-1"></i>Panel Admin
              <% end %>
            </li>
          <% end %>
          
          <li class="nav-item">
            <%= link_to edit_user_registration_path, class: "nav-link" do %>
              <i class="bi bi-person-circle me-1"></i><%= current_user.email %>
            <% end %>
          </li>
          
          <li class="nav-item">
            <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-link nav-link text-light p-0" do %>
              <i class="bi bi-box-arrow-right me-1"></i>Cerrar Sesión
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar Sesión
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link" do %>
              <i class="bi bi-person-plus me-1"></i>Registrarse
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const btn = document.querySelector('.mobile-menu-button');
    const menu = document.querySelector('.mobile-menu');
    
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  });
</script> 