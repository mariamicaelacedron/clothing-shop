<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">Iniciar Sesión</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "form-control", placeholder: "tu@email.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Contraseña", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", 
                  class: "form-control", placeholder: "••••••••" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Iniciar Sesión", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="mt-4 text-center">
            <%- if devise_mapping.recoverable? %>
              <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), 
                  class: "text-decoration-none" %>
            <% end %>
          </div>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-0">¿No tienes una cuenta?</p>
            <%= link_to "Regístrate", new_registration_path(resource_name), 
                class: "btn btn-outline-primary mt-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
