<div class="container py-4">
  <h1 class="display-4 mb-4">Nuestra Colecci√≥n</h1>

  <% @products.each do |category, products| %>
    <div class="mb-5">
      <h2 class="h3 mb-4">
        <%= t("categories.#{category}") %>
      </h2>
      
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        <% products.each do |product| %>
          <div class="col">
            <div class="card h-100 shadow-sm border-dark">
              <% if product.image.attached? %>
                <%= image_tag product.image, class: "card-img-top", style: "height: 250px; object-fit: cover;" %>
              <% end %>
              
              <div class="card-body">
                <h3 class="card-title h5"><%= product.name %></h3>
                <% if product.description.present? %>
                  <p class="card-text text-muted"><%= truncate(product.description, length: 100) %></p>
                <% end %>
                <% if product.price.present? %>
                  <p class="card-text fw-bold">$<%= number_with_precision(product.price, precision: 2) %></p>
                <% end %>
                
                <%= link_to "Ver detalles", product_path(product), 
                    class: "btn btn-dark mt-2" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div> 