<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow border-dark">
        <div class="row g-0">
          <div class="col-md-6">
            <% if @product.image.attached? %>
              <%= image_tag @product.image, class: "img-fluid rounded-start h-100", style: "object-fit: cover;" %>
            <% end %>
          </div>
          
          <div class="col-md-6">
            <div class="card-body p-4">
              <h1 class="card-title h2 mb-3"><%= @product.name %></h1>
              
              <div class="mb-4">
                <span class="badge bg-dark">
                  <%= t("categories.#{@product.category}") %>
                </span>
              </div>
              
              <% if @product.description.present? %>
                <div class="mb-4">
                  <h2 class="h5 mb-2">Descripción</h2>
                  <p class="card-text text-muted"><%= @product.description %></p>
                </div>
              <% end %>
              
              <% if @product.price.present? %>
                <div class="mb-4">
                  <h2 class="h5 mb-2">Precio</h2>
                  <p class="display-6">$<%= number_with_precision(@product.price, precision: 2) %></p>
                </div>
              <% end %>
              
              <div class="d-flex gap-2">
                <%= link_to "Volver a la colección", products_path, 
                    class: "btn btn-outline-dark" %>
                
                <% if current_user&.admin? %>
                  <%= link_to "Editar producto", edit_admin_product_path(@product), 
                      class: "btn btn-dark" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 